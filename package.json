{
  "name": "alhovuori-monorepo",
  "version": "1.0.0",
  "type": "module",
  "private": true,
  "workspaces": [
    "packages/*",
    "shared",
    "scripts"
  ],
  "scripts": {
    "start": "bun --hot server.ts",
    "dev": "bun --hot server.ts",
    "dev:survey": "cd packages/survey && bun run dev",
    "dev:stats": "cd packages/stats && bun run dev",
    "build": "bun run build:all",
    "build:survey": "cd packages/survey && bun run build",
    "build:all": "bun run build:survey",
    "preview": "bun run build:all && bun run start",
    "preview:survey": "cd packages/survey && bun run preview",
    "setup-db": "bun run scripts/setup-db.ts",
    "setup-db:reset": "bun run scripts/setup-db.ts --reset",
    "setup-db:check": "bun run scripts/setup-db.ts --check",
    "view-results": "bun run scripts/view-results.ts",
    "view-results:latest": "bun run scripts/view-results.ts --latest",
    "view-results:json": "bun run scripts/view-results.ts --json",
    "view-results:all": "bun run scripts/view-results.ts --all"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "typescript": "^5.7.3"
  }
}
